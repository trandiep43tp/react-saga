      
 <% 
    formErrors = (errors) =>{                      
        let xhtml = '';       
        if(errors.length == 0){
            return ``;        
        }else{
            errors.forEach((err, index)=>{
                let name = err.param.charAt(0).toUpperCase()+err.param.slice(1); 
                let msg  = err.msg.charAt(0).toUpperCase()+err.msg.slice(1); 
                xhtml +=`<li><b>${name}: </b>${msg}</li>` ;
            })
            return `
                <div class="alert alert-danger " role="alert">
                    <ul> ${xhtml}  </ul>
                </div>`
        };       
    }
%>
        