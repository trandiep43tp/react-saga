
<%
    const linkPrefix = systemConfig.prefixAdmin + '/auth/submit' ;
%>

<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Please Sign In</h3>
    </div>
    <div class="panel-body">
        <% include ./../../elements/error-login %>
        <% include ./../../elements/flash %>
        <form role="form" action="<%= linkPrefix %>" method="POST">
            <fieldset>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Username" name="username" value="<%=item.username %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="Password" name="password" autocomplete="off" value="<%=item.password %>" >
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login </button>
                </div>
            </fieldset> 
        </form>
    </div>
</div>