

<%
    const collection = 'users';   
    const linkPrefix   = systemConfig.prefixAdmin + `/${collection}/`;
    const forderImage = `/uploads/${collection}/`;
%> 
<%
     UpperCaseUserName = (name) =>{
        let xhtml = '';
        xhtml = toUpperCase(name);
        return xhtml;
     };
%>
<section class="ftco-section testimony-section bg-counter" >
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 ftco-animate">
                <div class="row ftco-animate">
                    <div class="col-md-12">
                        <div class="carousel-testimony owl-carousel ftco-owl">
                          <%  itemsUser.forEach((item, index) => { %>                          
                                <div class="item">
                                    <div class="testimony-wrap py-4 pb-5">
                                        <div class="user-img mb-4" style="background-image: url('<%- forderImage + item.avatar %>')">
                                            <span class="quote d-flex align-items-center justify-content-center">
                                                <i class="icon-quote-left"></i>
                                            </span>
                                        </div>
                                        <div class="text text-center">
                                            <p class="mb-4">
                                                <%- item.content %>
                                            </p>
                                            <!-- <p class="mb-4">A small river named Duden flows by their place and supplies it
                                                with the necessary regelialia. It is a paradisematic country, in which
                                                roasted parts of sentences fly into your mouth.
                                            </p> -->
                                            <p class="name"><%- item.name.toUpperCase() %></p>
                                            <span class="position"><%- item.group.name %></span>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>